      letter-spacing: 1px;
      text-transform: uppercase;
    }

    .navbar div {
      display: flex;
      gap: 20px;
      /* Space between links */
      align-items: center;
      /* Align items vertically in the middle */
    }

    .navbar a {
      color: #ffffff;
      /* White color for links */
      text-decoration: none;
      font-size: 1.1rem;
      position: relative;
      transition: color 0.3s ease;
    }

    .navbar a:hover {
      color: #f1c40f;
      /* Gold color on hover */
    }

    .navbar a::after {
      content: "";
      display: block;
      width: 100%;
      height: 2px;
      background: #f1c40f;
      /* Gold underline on hover */
      transform: scaleX(0);
      transition: transform 0.3s ease;
      position: relative;
      bottom: -4px;
    }

    .navbar a:hover::after {
      transform: scaleX(1);
      /* Animate the underline effect */
    }

    .login-btn {
      background-color: #f1c40f;
      /* Gold background for the login button */
